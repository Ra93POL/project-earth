{% extends 'BasicCmsBundle:Default:layout.html.twig' %}
{% block mainmenu %}
    {{ render(controller('BasicCmsBundle:Default:menu')) }}
{% endblock %}
{% block title %}Журнал событий{% endblock %}
{% block breadcrumbs %}
    <a href="{{path('basic_cms_index')}}" class="main">Главная</a>
    <span>Журнал событий</span>
{% endblock %}
{% block content %}
<div id="tabsButtons">
    <a href="#" id="tab1" {% if (tab == 0) %}class="active"{% endif %}>События</a>
    {% if (app.user.checkAccess('site_logfront') == 1) %}
    <a href="#" id="tab2" {% if (tab == 1) %}class="active"{% endif %}>Настройка оповещения</a>
    {% endif %}
</div>
<div id="tabsContent">
    <div id="con_tab1" {% if (tab == 0) %}class="active"{% endif %}>
        {% include "BasicCmsBundle:Default:logsListTab1.html.twig" %}
    </div>
    {% if (app.user.checkAccess('site_logfront') == 1) %}
    <div id="con_tab2" {% if (tab == 1) %}class="active"{% endif %}>
        {% include "BasicCmsBundle:Default:logsListTab2.html.twig" %}
    </div>
    {% endif %}
</div>​
{% endblock %}       



